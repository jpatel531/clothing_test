.shopping-cart
	You have ordered {{shoppingCart.length}} items

.container

	{{stockMessage}}
	.col-sm-4{:"ng-repeat" => "product in products"}
		.panel.panel-default
			.panel-heading
				%h3.panel-title {{product.name}}
			.panel-body
				.image
					{{product.image}}
				.post-info
					.row.text-center
						{{product.category}}
					.row.text-center
						{{product.price | currency:"Â£"}}
					.row.text-center
						{{product.quantity}} in stock
					.row.text-center
						%a{href: "#", id: "{{product.id}}", :"add-item" => "{{product.id}}", quantity: "{{product.quantity}}"} Add To Cart

